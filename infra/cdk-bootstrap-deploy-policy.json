{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "CDKBootstrapSSM",
      "Effect": "Allow",
      "Action": [
        "ssm:GetParameter",
        "ssm:GetParameters"
      ],
      "Resource": "arn:aws:ssm:ap-south-1:712004218608:parameter/cdk-bootstrap/*"
    },
    {
      "Sid": "CDKBootstrapS3",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject*",
        "s3:GetBucket*",
        "s3:List*",
        "s3:PutObject*",
        "s3:DeleteObject*",
        "s3:Abort*"
      ],
      "Resource": [
        "arn:aws:s3:::cdk-hnb659fds-assets-712004218608-ap-south-1",
        "arn:aws:s3:::cdk-hnb659fds-assets-712004218608-ap-south-1/*"
      ]
    },
    {
      "Sid": "CDKAssumeDeployRole",
      "Effect": "Allow",
      "Action": "sts:AssumeRole",
      "Resource": "arn:aws:iam::712004218608:role/cdk-hnb659fds-deploy-role-712004218608-ap-south-1"
    },
    {
      "Sid": "CDKCloudFormation",
      "Effect": "Allow",
      "Action": [
        "cloudformation:Describe*",
        "cloudformation:Get*",
        "cloudformation:List*",
        "cloudformation:CreateStack",
        "cloudformation:UpdateStack",
        "cloudformation:DeleteStack",
        "cloudformation:CreateChangeSet",
        "cloudformation:DeleteChangeSet",
        "cloudformation:DescribeChangeSet",
        "cloudformation:ExecuteChangeSet"
      ],
      "Resource": "*"
    },
    {
      "Sid": "CDKECR",
      "Effect": "Allow",
      "Action": [
        "ecr:GetAuthorizationToken"
      ],
      "Resource": "*"
    },
    {
      "Sid": "CDKECRPushPull",
      "Effect": "Allow",
      "Action": [
        "ecr:BatchCheckLayerAvailability",
        "ecr:GetDownloadUrlForLayer",
        "ecr:BatchGetImage",
        "ecr:PutImage",
        "ecr:InitiateLayerUpload",
        "ecr:UploadLayerPart",
        "ecr:CompleteLayerUpload"
      ],
      "Resource": "arn:aws:ecr:ap-south-1:712004218608:repository/cdk-hnb659fds-container-assets-712004218608-ap-south-1"
    },
    {
      "Sid": "CDKIAMPassRole",
      "Effect": "Allow",
      "Action": "iam:PassRole",
      "Resource": "arn:aws:iam::712004218608:role/cdk-hnb659fds-*-712004218608-ap-south-1",
      "Condition": {
        "StringEquals": {
          "iam:PassedToService": [
            "cloudformation.amazonaws.com",
            "ecs-tasks.amazonaws.com",
            "ec2.amazonaws.com"
          ]
        }
      }
    }
  ]
}
